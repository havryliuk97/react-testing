{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "ES5",
        "module": "CommonJS",
        "jsx": "react",
        "lib": ["DOM", "ES2019"],
        "sourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
    },
    "include": [
        "./src/**/*"
    ]
}